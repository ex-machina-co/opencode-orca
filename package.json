{
  "name": "@ex-machina/opencode-orca",
  "version": "0.0.1-alpha.3",
  "description": "OpenCode plugin for Orca + Specialists agent orchestration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "opencode-orca": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:staged": "biome check --staged --fix --no-errors-on-unmatched",
    "format": "biome check . --fix --unsafe",
    "test": "bun test",
    "wt:new": "bash scripts/worktree/new.sh",
    "wt:list": "bash scripts/worktree/list.sh",
    "wt:rm": "bash scripts/worktree/rm.sh",
    "prepare": "husky",
    "validate": "conc --names LINT,TSC,TEST,BUILD -c cyan,blue,green,magenta 'bun run build' 'bun test' 'bun lint' 'bun typecheck'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ex-machina-co/opencode-orca.git"
  },
  "keywords": [
    "opencode",
    "plugin",
    "agents",
    "orchestration",
    "orca"
  ],
  "author": "Julian Coy <julian@ex-machina.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ex-machina-co/opencode-orca/issues"
  },
  "homepage": "https://github.com/ex-machina-co/opencode-orca#readme",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@ex-machina/opencode-orca": "link:.",
    "@types/bun": "^1.2.15",
    "@types/lodash": "^4.17.23",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@opencode-ai/plugin": "npm:@ex-machina/opencode-plugin@1.1.25-exmachina.4",
    "@opencode-ai/sdk": "npm:@ex-machina/opencode-sdk@1.1.25-exmachina.4",
    "comment-json": "^4.5.1",
    "dedent": "^1.7.1",
    "lodash": "^4.17.21",
    "zod": "4.1.8"
  },
  "files": [
    "dist",
    "templates"
  ],
  "publishConfig": {
    "access": "public"
  }
}
