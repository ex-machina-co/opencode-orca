{
  "name": "opencode-orca",
  "version": "0.0.1-alpha.1",
  "description": "OpenCode plugin for Orca + Specialists agent orchestration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "opencode-orca": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:staged": "biome check --staged --fix --no-errors-on-unmatched",
    "format": "biome format . --write",
    "test": "bun test",
    "wt:new": "bash scripts/worktree/new.sh",
    "wt:list": "bash scripts/worktree/list.sh",
    "wt:rm": "bash scripts/worktree/rm.sh",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eXamadeus/opencode-orca.git"
  },
  "keywords": ["opencode", "plugin", "agents", "orchestration", "orca"],
  "author": "Julian Coy <julian@juliancoy.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eXamadeus/opencode-orca/issues"
  },
  "homepage": "https://github.com/eXamadeus/opencode-orca#readme",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.15",
    "husky": "^9.1.7",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.218",
    "comment-json": "^4.5.1",
    "zod": "^4.0.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.0.0"
  },
  "files": ["dist", "templates"]
}
